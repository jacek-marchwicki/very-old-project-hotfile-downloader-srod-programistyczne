<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
    android:id="@+id/mylayout"
    android:layout_width="fill_parent" 
android:layout_height="wrap_content">

</LinearLayout>
<ListView android:id="@+id/ListView01" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"></ListView>

<Button android:id="@+id/Button_download" android:layout_height="wrap_content" android:text="Start download" android:layout_width="match_parent"></Button>


<Button android:id="@+id/Button_addlinksfromfile" android:layout_height="wrap_content" android:text="Add links from file" android:layout_width="match_parent"></Button>
<Button android:id="@+id/Button_addlinkfromclipboard" android:layout_height="wrap_content" android:text="Add link" android:layout_width="match_parent"></Button>
<Button android:id="@+id/Button_showdownloadlist" android:layout_height="wrap_content" android:text="Show download list" android:layout_width="match_parent"></Button>

</LinearLayout>
